html(lang="es")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        link(type='text/css', rel='stylesheet', href='public/css/materialize.min.css')
        link(type='text/css', rel='stylesheet', href='public/css/styles.css')
        link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
        title Coordinador
    body
        nav
            .nav-wrapper
                a.button-collapse(href='#', data-activates='mobile-demo')
                    i.material-icons(style='color:black;') menu
                ul.right.hide-on-med-and-down
                    li(style='border-right:1px solid #ebebeb;border-left:1px solid #ebebeb')
                        a.font12.altas(href="#" onclick="requestNewSession();return false;")
                            img.left(style='padding:10px; width:60px;', width='50', src='public/img/restart.png')
                ul#mobile-demo.side-nav
                    li
                        a.dropdown-button.font12.altas(href='#!', data-activates='dropdown2')
                            img.left(src='public/img/General.png')
                        | Coordinador
                    li(style='border-right:1px solid #ebebeb;border-left:1px solid #ebebeb')
                        a.font12.altas(href='#')
                            img.left(style='padding:10px; width:60px;', width='50', src='public/img/restart.png')
                        | Reiniciar
                    li(style='border-right:1px solid #ebebeb;')
                        a.font12.altas(href='#')
                            img.left(style='padding:10px; width:60px;', width='50', src='public/img/logout.png')
                        | Salir
        div.container
            .row
            each order in orders
                    .card.horizontal.s12.m8.offset-m2
                        .card-image
                            img(src='public/img/'+order.Portada, style="height:230px; width:146px")
                        .card-stacked
                            .card-content
                                table.highlight
                                    tbody
                                        tr
                                            td(style="font-weight: bold;") Usuario
                                            td #{order.idUsuario}
                                        tr
                                            td(style="font-weight: bold;") Sesi&oacute;n
                                            td #{order.idSesion}
                                        tr
                                            td(style="font-weight: bold;") Tiempo de Pedido
                                            td #{order.Tiempo}
                                        tr
                                            td(style="font-weight: bold;") Direcci&oacute;n IP
                                            td #{order.IP}
    script(src="public/js/coordinador.js")