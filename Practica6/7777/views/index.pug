html(lang="es")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        link(type='text/css', rel='stylesheet', href='public/css/materialize.min.css')
        link(type='text/css', rel='stylesheet', href='public/css/styles.css')
        link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
        title Libreria
    body
        nav
            .nav-wrapper
                a.button-collapse(href='#', data-activates='mobile-demo')
                    i.material-icons(style='color:black;') menu
                ul#mobile-demo.side-nav
                    li
                        a.dropdown-button.font12.altas(href='#!', data-activates='dropdown2')
                            img.left(src='public/img/General.png')
                        | Coordinador
                    li(style='border-right:1px solid #ebebeb;border-left:1px solid #ebebeb')
                        a.font12.altas(href='#')
                            img.left(style='padding:10px; width:60px;', width='50', src='public/img/restart.png')
                        | Reiniciar
                    li(style='border-right:1px solid #ebebeb;')
                        a.font12.altas(href='#')
                            img.left(style='padding:10px; width:60px;', width='50', src='public/img/logout.png')
                        | Salir
        div.container(style="margin-top:20px;")
            .row
                input#username.col.s12.m10(type="text", name="username", placeholder="Usuario")
                button#requestNewBook.btn.col.s12.m2(onclick="requestNewBook()") Nuevo libro
            .row
                .col.s12.m10.offset-m1
                        .card.horizontal
                            .card-stacked
                                .card-content
                                    table.highlight
                                        tbody
                                            tr
                                                td(style="font-weight: bold;") ISBN
                                                td#ISBN
                                            tr
                                                td(style="font-weight: bold;") Nombre
                                                td#Nombre
                                            tr
                                                td(style="font-weight: bold;") Autor
                                                td#Autor
                                            tr
                                                td(style="font-weight: bold;") Editorial
                                                td#Editorial
                                            tr
                                                td(style="font-weight: bold;") Precio
                                                td#Precio
            .row
                .col.s4.offset-s5
                    h3#clock 00:00:00
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/index.js")